# PHPStan configuration for Update Automate: static analysis of plugin.
includes:
    - ../vendor/szepeviktor/phpstan-wordpress/extension.neon

parameters:
    bootstrapFiles:
        - phpstan-bootstrap.php
    level: 6
    excludePaths:
        analyseAndScan:
            - .config/*
            - vendor/*
            - node_modules/*
    ignoreErrors:
            # Ignore errors about WP Mail SMTP functions not found
            - '#Function wp_mail_smtp not found#'